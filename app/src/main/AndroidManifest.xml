<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.parnekov.sasha.note">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/notepad_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.NoteListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NotePagerActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.NoteListActivity">
        </activity>
    </application>

</manifest>